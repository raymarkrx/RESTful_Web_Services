<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	
	<display-name>dw.spring3.rest</display-name>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<!-- The context params that read by ContextLoaderListener  -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/rest-context.xml
		</param-value>
	</context-param>
	
	<!-- This listener will load other application context file in addition to springweb-servlet.xml -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>rest</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>rest</servlet-name>
		<url-pattern>/service/*</url-pattern>
	</servlet-mapping>
	
	<jsp-config>
		<taglib>
			<taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
			<taglib-location>/WEB-INF/tags/c.tld</taglib-location>
		</taglib>
	</jsp-config>
	
	<!-- add by chh for kafka begin -->
	<servlet>
	    <servlet-name>jsonEventServlet</servlet-name>
	    <servlet-class>com.aichuche.servlet.JsonEventServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>jsonEventServlet</servlet-name>
	    <url-pattern>/json</url-pattern>
	</servlet-mapping>
	<!-- add by chh for kafka end -->
	
		<!-- add by chh for aichuche begin -->
	<servlet>
	    <servlet-name>reportdataServlet</servlet-name>
	    <servlet-class>com.aichuche.servlet.chh.ReportDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>reportdataServlet</servlet-name>
	    <url-pattern>/reportdata</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>connectChangedServlet</servlet-name>
	    <servlet-class>com.aichuche.servlet.chh.ConnectChangedServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>connectChangedServlet</servlet-name>
	    <url-pattern>/connect_changed</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>simplePushServlet</servlet-name>
	    <servlet-class>com.aichuche.servlet.chh.SimplePushServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>simplePushServlet</servlet-name>
	    <url-pattern>/simplepush</url-pattern>
	</servlet-mapping>
	
		<servlet>
	    <servlet-name>simplePushRevokeServlet</servlet-name>
	    <servlet-class>com.aichuche.servlet.chh.SimplePushRevokeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>simplePushRevokeServlet</servlet-name>
	    <url-pattern>/simplepush_revoke</url-pattern>
	</servlet-mapping>
	
		<servlet>
	    <servlet-name>testServlet</servlet-name>
	    <servlet-class>com.aichuche.servlet.chh.TestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>testServlet</servlet-name>
	    <url-pattern>/testServlet</url-pattern>
	</servlet-mapping>
	<!-- add by chh for aichuche end -->
	
</web-app>